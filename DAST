pipeline {
    agent any  // Executes the job on any available agent

    stages {
        stage('Clone Repository') {
            steps {
                // Replace this with your repository URL
                git url: 'https://github.com/Zidane-Tribal/lebron_james'
            }
        }

        stage('Run OWASP ZAP Scan') {
            steps {
                script {
                    // If using Docker for OWASP ZAP
                    sh 'docker run -t owasp/zap2docker-stable zap-baseline.py -t http://10.0.2.4 -r zap-report.html'

                    // If OWASP ZAP is installed locally, you can use:
                    // sh '/path/to/zap/zap.sh -daemon -port 8080'
                    // sh 'zap-cli quick-scan http://10.0.2.4'
                }
            }
        }

        stage('Publish ZAP Report') {
            steps {
                // Publish the ZAP scan report in Jenkins
                publishHTML([ 
                    reportName: 'OWASP ZAP Report',
                    reportDir: '.',
                    reportFiles: 'zap-report.html',
                    keepAll: true,
                    alwaysLinkToLastBuild: true
                ])
            }
        }
    }
}
